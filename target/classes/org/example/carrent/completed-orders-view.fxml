<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.carrent.controller.CompletedOrdersController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Завершенные заказы" />
            <padding>
                <Insets bottom="20.0" />
            </padding>
        </HBox>
    </top>
    
    <center>
        <TableView fx:id="completedOrdersTable">
            <columns>
                <TableColumn fx:id="startDateColumn" prefWidth="100.0" text="С даты" />
                <TableColumn fx:id="endDateColumn" prefWidth="100.0" text="По дату" />
                <TableColumn fx:id="clientColumn" prefWidth="200.0" text="ФИО" />
                 <TableColumn fx:id="clientPhoneColumn" prefWidth="150.0" text="Номер телефона" />
                <TableColumn fx:id="clientPassportSeriesColumn" prefWidth="100.0" text="Серия паспорта" />
                <TableColumn fx:id="clientPassportNumberColumn" prefWidth="150.0" text="Номер паспорта" />
                <TableColumn fx:id="carColumn" prefWidth="200.0" text="Автомобиль" />
                 <TableColumn fx:id="carPlateColumn" prefWidth="150.0" text="Гос. номер" />
                <TableColumn fx:id="totalCostColumn" prefWidth="100.0" text="Итого" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
</BorderPane>