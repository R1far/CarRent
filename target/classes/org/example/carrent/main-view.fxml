<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:id="mainBorderPane" fx:controller="org.example.carrent.controller.MainController">
    <left>
        <VBox fx:id="sidebar" spacing="10.0" style="-fx-background-color: #dddddd; -fx-pref-width: 200;">
            <VBox prefHeight="100.0" alignment="CENTER" style="-fx-background-color: transparent;">
                <ImageView fitHeight="80.0" fitWidth="180.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@assets/car_logo_new.png"/>
                    </image>
                </ImageView>
            </VBox>
            <padding>
                <Insets bottom="20.0" left="10.0" right="10.0" top="20.0"/>
            </padding>
            <Button fx:id="bookingsNavButton" maxWidth="Infinity" onAction="#onBookingsButtonClick" text="Журнал операций"/>
            <Button fx:id="fleetNavButton" maxWidth="Infinity" onAction="#onFleetButtonClick" text="Автопарк"/>
            <Button fx:id="clientsNavButton" maxWidth="Infinity" onAction="#onClientsButtonClick" text="Клиенты"/>
            <Button fx:id="completedNavButton" maxWidth="Infinity" onAction="#onCompletedOrdersButtonClick" text="Завершенные заказы"/>
        </VBox>
    </left>
    <center>
        <VBox alignment="CENTER" spacing="20.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
        </VBox>
    </center>
</BorderPane>