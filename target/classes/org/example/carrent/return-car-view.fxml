<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.carrent.controller.ReturnCarController" style="-fx-padding: 20;">
    <Label text="Приемка автомобиля" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 0 0 10 0;"/>

    <Button text="Все отлично (В парк)" onAction="#onReturnOk" maxWidth="Infinity" style="-fx-background-color: #d1fae5; -fx-text-fill: #065f46; -fx-font-weight: bold; -fx-background-radius: 5;"/>
    <Button text="Есть повреждения (Ремонт)" onAction="#onReturnRepair" maxWidth="Infinity" style="-fx-background-color: #fef9c3; -fx-text-fill: #854d09; -fx-font-weight: bold; -fx-background-radius: 5;"/>
    <Button fx:id="cancelButton" text="Отмена" onAction="#onCancel" maxWidth="Infinity" style="-fx-background-color: transparent; -fx-text-fill: grey; -fx-border-color: grey; -fx-border-radius: 5; -fx-font-weight: bold;"/>
</VBox>
