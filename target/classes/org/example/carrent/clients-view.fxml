<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.carrent.controller.ClientsController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="20.0">
        <Label text="Клиенты" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Редактировать" onAction="#onEditClientClick" style="-fx-background-color: transparent; -fx-text-fill: #1e40af; -fx-border-color: #1e40af; -fx-border-radius: 5; -fx-cursor: hand;"/>
        <Button text="Удалить" onAction="#onDeleteClientClick" style="-fx-background-color: transparent; -fx-text-fill: red; -fx-border-color: red; -fx-border-radius: 5; -fx-cursor: hand;"/>
        <Button text="+ Клиент" onAction="#onAddClientClick" style="-fx-background-color: #333; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>
    </HBox>

    <TableView fx:id="clientsTable">
        <columns>
            <TableColumn fx:id="nameColumn" prefWidth="200.0" text="ФИО" />
            <TableColumn fx:id="phoneColumn" prefWidth="150.0" text="Телефон" />
            <TableColumn fx:id="passportSeriesColumn" prefWidth="100.0" text="Серия паспорта" />
            <TableColumn fx:id="passportNumberColumn" prefWidth="150.0" text="Номер паспорта" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
</VBox>