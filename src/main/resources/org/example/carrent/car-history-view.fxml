<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.carrent.controller.CarHistoryController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="10">
        <VBox>
            <Label fx:id="carTitleLabel" styleClass="title-text"/>
            <Label fx:id="carPlateLabel" style="-fx-text-fill: #64748b; -fx-font-size: 12px;"/>
        </VBox>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="closeButton" text="Закрыть" onAction="#onClose" styleClass="secondary-button" />
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #f1f5f9; -fx-padding: 10px; -fx-background-radius: 5px; -fx-border-color: #e2e8f0; -fx-border-radius: 5px;">
        <Label text="Фильтр:" style="-fx-font-weight: bold; -fx-text-fill: #475569;"/>
        <DatePicker fx:id="filterStart" promptText="С" prefWidth="100" onAction="#applyFilter"/>
        <Label text="—"/>
        <DatePicker fx:id="filterEnd" promptText="По" prefWidth="100" onAction="#applyFilter"/>
    </HBox>

    <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
        <VBox fx:id="historyContainer" spacing="10"/>
    </ScrollPane>
</VBox>
