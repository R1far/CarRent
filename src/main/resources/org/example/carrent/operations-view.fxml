<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.carrent.controller.OperationsController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    
    <top>
        <VBox spacing="15.0">
            <padding>
                <Insets bottom="10.0" />
            </padding>
            <HBox alignment="CENTER_LEFT" spacing="20.0">
                <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Журнал операций" />
                <Region HBox.hgrow="ALWAYS" />
                <Button onAction="#onAddOperationClick" style="-fx-background-color: #f59e0b; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" text="+ Новая запись" />
            </HBox>
            
            <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #f8fafc; -fx-padding: 10; -fx-background-radius: 8;">
                <Label text="Статус:" style="-fx-font-weight: bold;" />
                <javafx.scene.control.ComboBox fx:id="statusFilterCombo" prefWidth="130.0" promptText="Все" />
                
                <Label text="С:" style="-fx-font-weight: bold;">
                    <HBox.margin>
                        <Insets left="10.0" />
                    </HBox.margin>
                </Label>
                <javafx.scene.control.DatePicker fx:id="dateFromPicker" prefWidth="120.0" promptText="дд.мм.гггг" />
                
                <Label text="По:" style="-fx-font-weight: bold;" />
                <javafx.scene.control.DatePicker fx:id="dateToPicker" prefWidth="120.0" promptText="дд.мм.гггг" />
                
                <Region HBox.hgrow="ALWAYS" />
                
                <Button onAction="#onFilterClick" text="Фильтр" style="-fx-background-color: #3b82f6; -fx-text-fill: white; -fx-cursor: hand;" />
                <Button onAction="#onResetFilterClick" text="Сброс" style="-fx-background-color: #e2e8f0; -fx-cursor: hand;" />
            </HBox>
        </VBox>
    </top>
    
    <center>
        <TableView fx:id="operationsTable">
            <columns>
                <TableColumn fx:id="startDateColumn" prefWidth="150.0" text="С даты" />
                <TableColumn fx:id="endDateColumn" prefWidth="150.0" text="По дату" />
                <TableColumn fx:id="carColumn" prefWidth="200.0" text="Автомобиль" />
                <TableColumn fx:id="clientColumn" prefWidth="200.0" text="Клиент" />
                <TableColumn fx:id="statusColumn" prefWidth="150.0" text="Статус" />
                <TableColumn fx:id="actionsColumn" prefWidth="150.0" text="Действия" />
                <TableColumn fx:id="totalCostColumn" prefWidth="100.0" text="Сумма" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
</BorderPane>